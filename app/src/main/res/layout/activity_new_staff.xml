<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NewStaff">

    <ImageView
        android:id="@+id/staff_add_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/fui_ic_anonymous_white_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_account_circle" />

    <EditText
        android:id="@+id/edit_text_staff_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:hint="Title"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staff_add_photo" />

    <EditText
        android:id="@+id/edit_text_staff_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Email"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_staff_role"
        app:layout_constraintStart_toStartOf="@+id/edit_text_staff_role"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_staff_role" />

    <EditText
        android:id="@+id/edit_text_staff_role"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Role"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_staff_phone"
        app:layout_constraintStart_toStartOf="@+id/edit_text_staff_phone"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_staff_phone" />

    <EditText
        android:id="@+id/edit_text_staff_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Phone number"
        android:inputType="phone"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_staff_name"
        app:layout_constraintStart_toStartOf="@+id/edit_text_staff_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_staff_name" />

</androidx.constraintlayout.widget.ConstraintLayout>